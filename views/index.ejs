<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/styles.css">
    <title>My Blogger</title>
</head>
<body>

<%- include ("partials/header.ejs") %>

<div>
    <form class="input" action="/post" method="post">
      <input name="title" placeholder="Title"></input>
      <textarea name="content"  placeholder="Take a note..." rows="3"></textarea>
      <button>Add</button>
    </form>
  </div>
  <% posts.forEach(post => {%>
  <div class="note">
    <h1><%= post.title %></h1>
    <p><%= post.content %></p>
    <form action="/edit/<%= post.id %>" method="get">
      <input type="hidden" name="postId" value="<%= post.id %>">
      <button type="submit" class="edit">Edit</button>
  </form>
    <form action="/delete" method="post">
        <input type="hidden" name="postId" value="<%= post.id %>" class="hidden">
    <button class="delete">DELETE</button>
    </input>
    </form>
  </div>
  <% }) %>

<%- include ("partials/footer.ejs") %>
    
</body>
</html>

